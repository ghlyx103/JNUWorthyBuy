/* pages/audit/audit.wxss */
page{
  background-color: #f3f1f1;
  position: relative;
}
.show{
  display: flex;
}
.zhuangtai{
  display: flex;
  margin-top: 30rpx;
  background: white;
  height: 25px;
}
.shijian{
  font-size: 12px;
  margin-left: 2%;
  margin-top: 10px;
}
.daishenhe{
  font-size: 12px;
  color: red;
  right: 15%;
  margin-top: 10px;
  position:absolute;
}
.list-item {
  display:flex;
  flex-direction: row;

  width: 100%;
  height: 240rpx;
  position: relative;
  background: white;
}
.item-image {
  width: 250rpx;
  height: 220rpx;
  margin-left: 20rpx;
  margin-top: 10px;
}
.list-text {
  font-size: 15px;
  flex-direction: row;
  align-items: center;
  width: 70%;
  height: 220rpx;
  margin-top: 10px;
}
.shangpinming{
  margin-left: 10px;
}
.jiage{
  margin-top: 40px;
  margin-left: 150px;
}
.buttonBox{
  height: 50px;
  display: flex;  
  background-color: white;
}
.buttonBox .success{
  border:1px solid black;
  margin: 5rpx;
  margin-left: 45%;
}
.buttonBox .cancel{
  border:1px solid black;
  margin: 5rpx;
}
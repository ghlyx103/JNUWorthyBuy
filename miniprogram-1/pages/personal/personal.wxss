/* pages/personal/personal.wxss */

/* 页面背景颜色 */
page{
  background-color: #f3f1f1;
}
/* 图片背景 */
.user_info_warp{
  height: 27.5vh;
  background-color: #FFA54F;
}



/* 用户信息 */
.user_info{
  position: absolute;
  left: 5%;
  top: 5%;
}
/* 用户头像 */
.user_icon{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
/* 用户名字 */
.user_id{
  color: white;
  font-size: 40rpx;
  position: absolute;
  top:  12.5%;
  left: 35%;
}
/* 我的推荐和我的关注 */
.show{
  display: flex;
}
/* 黑线 使得产生阴影效果 */
.line {
  width: 100%;
  height: 3rpx;
  background: lightgray;
  margin-left: 90rpx;
}
.list-item {
  display:flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  position: relative; /*父元素位置要设置为相对*/
  background: white;
}
.list-text {
  flex-direction: row;
  align-items: center;
  width: 70%;
  height: 300rpx;
  background: white;
}

/* 图片设置 */
.item-image {
  width: 300rpx;
  height: 250rpx;
  margin: 20rpx;
}
/* 文字 */
.item-text {
  color: rgb(15, 14, 14);
  font-size: 35rpx;
  margin-top: 20rpx;
  position: relative;
}
.item-textr {
  color: red;
  font-size: 35rpx;
  margin-top: 20rpx;
  position: relative;
}





/* 同步class名称 */
.img {
  /* 图片 */
  width: 300rpx;
  height: 250rpx;
  margin: 20rpx;
}
.price {
  /* 价格 */
  color: red;
  font-size: 35rpx;
  margin-top: 20rpx;
  position: relative;
}
.goods_name {
  /* 商品名 */
  color: rgb(15, 14, 14);
  font-size: 35rpx;
  margin-top: 20rpx;
  position: relative;
}
.date {
  /* 发布日期 */
  color: rgb(15, 14, 14);
  font-size: 35rpx;
  margin-top: 20rpx;
  position: relative;
}